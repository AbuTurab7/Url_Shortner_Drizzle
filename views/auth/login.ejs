<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <%- include("../partials/navbar") %>

  <div class="auth-main-container">
    <div class="auth-container">
      <h2 class="auth-title">Welcome Back ðŸ‘‹</h2>
      <p class="auth-subtitle">Login to continue to <strong>URLShort</strong></p>

      <% if(success && success.length > 0) { %>
        <% success.forEach((msg) => { %>
          <p class="flash-success"><%= msg %></p>
        <% }) %>
      <% } %>
      
      <form action="/login" method="POST" class="auth-form">
        <div class="auth-input-box">
          <input type="email" name="email" id="email" placeholder="Email" required />
        </div>
        <div class="auth-input-box">
          <input type="password" name="password" id="password" placeholder="Password" required />
        </div>
        <% if(errors && errors.length > 0) { %>
          <% errors.forEach((error) => { %>
            <p class="flash-error"><%= error %></p>
          <% }) %>
        <% } %>
        
        <button type="submit" class="auth-btn">Login</button>
        
        <div class="auth-links">
          <a href="/forget-password" class="link">Forgot Password?</a>
          <span>|</span>
          <a href="/register" class="link">Sign Up</a>
        </div>
      </form>

      <!-- Divider -->
      <div class="auth-divider">
        <span>or</span>
      </div>

      <!-- Social Login -->
      <div class="social-login">
        <a href="/google" class="social-btn google-btn">
          <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google" />
          Login with Google
        </a>
        <a href="/auth/github" class="social-btn github-btn">
          <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/github/github-original.svg" alt="GitHub" />
          Login with GitHub
        </a>
      </div>
    </div>
  </div>
</body>
</html>
